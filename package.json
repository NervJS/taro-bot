{
  "name": "taro-bot",
  "version": "1.0.0",
  "description": "A bot app for Taro",
  "author": "yuche <i@yuche.me>",
  "license": "ISC",
  "repository": "https://github.com/nervjs/taro-bot.git",
  "homepage": "https://github.com/nervjs/taro-bot",
  "bugs": "https://github.com/nervjs/taro-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "deploy": "now --public && now alias && now rm $npm_package_now_name --safe --yes"
  },
  "dependencies": {
    "@octokit/rest": "^15.15.1",
    "@types/nock": "^9.3.0",
    "latest-version": "^5.1.0",
    "moment": "^2.22.2",
    "nock": "^10.0.0",
    "probot": "7.3.1",
    "probot-scheduler": "github:probot/scheduler#0da3a0005c0619201bb26a9d20a3ac985930e6d4",
    "request-promise": "^4.2.2",
    "scramjet": "^4.18.14",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "@types/semver": "^7.3.1",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^29.3.1",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^18.0.0"
  },
  "now": {
    "name": "taro-bot",
    "alias": "taro-bot.now.sh",
    "files": [
      "src",
      ".env",
      "tsconfig.json"
    ]
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
